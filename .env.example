# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000          # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=10            # Maximum requests per window per IP

# Audit Configuration
MAX_PAGES_DEFAULT=50                  # Default maximum pages to scan
MAX_PAGES_LIMIT=100                   # Absolute maximum pages allowed
CRAWL_TIMEOUT_MS=45000                # Page navigation timeout in milliseconds
AUDIT_CONCURRENCY=3                   # Number of parallel page audits
CONTENT_WAIT_MS=2000                  # Wait time for dynamic content
AXE_INIT_WAIT_MS=500                  # Wait time for axe-core initialization

# Job Management
JOB_CLEANUP_INTERVAL_MS=600000        # Job cleanup interval (10 minutes)
JOB_MAX_AGE_MS=3600000                # Maximum job age before cleanup (1 hour)

# Logging
LOG_LEVEL=info                        # debug | info | warn | error
LOG_CONSOLE=true                      # Enable console logging
LOG_JSON=false                        # Enable JSON formatted logs

# Optional: Skip config validation (for testing only)
# SKIP_CONFIG_VALIDATION=true
